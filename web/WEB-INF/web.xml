        <servlet-name>ModifyCustomerServlet</servlet-name>
        <url-pattern>/pages/staffs/modifyCustomerServlet</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/pages/resetPassword</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <description>Enviroment Entry Reader Listener</description>
        <listener-class>listeners.ServerListener</listener-class>
    </listener>
    <error-page>
        <error-code>403</error-code>
        <location>/pages/errors/unauthorizedErrorPage.html</location>
    </error-page>
    <security-constraint>
        <display-name>Admin Constraints</display-name>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <description/>
            <url-pattern>/pages/admins/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Staff Constraints</display-name>
        <web-resource-collection>
            <web-resource-name>Staff</web-resource-name>
            <description/>
            <url-pattern>/pages/staffs/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Admin</role-name>
            <role-name>Staff</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/pages/adminLogin.jsp</form-login-page>
            <form-error-page>/pages/errors/unauthorizedErrorPage.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Admin Role</description>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <description>Staff Role</description>
        <role-name>Staff</role-name>
    </security-role>
