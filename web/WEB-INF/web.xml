<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <!--~~~~~~~~~~~~~~~~~~~~Don't Touch~~~~~~~~~~~~~~~~~~~~-->
    <!--Welcome File-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--Restriced Jsp-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted JSPs</web-resource-name>
            <description/>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    <!--Services-->
    <servlet>
        <servlet-name>ServiceServlet</servlet-name>
        <servlet-class>presentation.controllers.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/services/sendOtp</url-pattern>
        <url-pattern>/services/sendEmail</url-pattern>
    </servlet-mapping>
    <!--~~~~~~~~~~~~~~~~~~~~Don't Touch~~~~~~~~~~~~~~~~~~~~-->
    <!--Servlet-->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>presentation.controllers.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>presentation.controllers.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>presentation.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>presentation.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>presentation.controllers.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>presentation.controllers.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>presentation.controllers.AdminServlet</servlet-class>
    </servlet>
    <!--Servlet Mapping-->
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/pages/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/pages/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/login</url-pattern>
        <url-pattern>/pages/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/pages/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/pages/profile</url-pattern>
        <url-pattern>/pages/profile/uploadPicture</url-pattern>
        <url-pattern>/pages/profile/removePicture</url-pattern>
        <url-pattern>/pages/profile/updateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/pages/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/pages/admin</url-pattern>
    </servlet-mapping>
</web-app>
