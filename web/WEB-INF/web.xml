<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <!--~~~~~~~~~~~~~~~~~~~~Don't Touch~~~~~~~~~~~~~~~~~~~~-->
    <!--Welcome File-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--Restriced Jsp-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted JSPs</web-resource-name>
            <description/>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    <!--Services-->
    <servlet>
        <servlet-name>ServiceServlet</servlet-name>
        <servlet-class>controllers.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/services/sendOtp</url-pattern>
        <url-pattern>/services/sendEmail</url-pattern>
    </servlet-mapping>
    <!--Sessions-->
    <servlet>
        <servlet-name>OtpServlet</servlet-name>
        <servlet-class>controllers.OtpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OtpServlet</servlet-name>
        <url-pattern>/sessions/sendOtp</url-pattern>
        <url-pattern>/sessions/verifyOtp</url-pattern>
    </servlet-mapping>
    <!--Listener-->
    <listener>
        <description>Enviroment Entry Reader Listener</description>
        <listener-class>listeners.ServerListener</listener-class>
    </listener>
    <!--Enviroment-->
    <env-entry>
        <env-entry-name>AES_KEY</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
