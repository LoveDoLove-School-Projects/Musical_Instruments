    </env-entry>
    <env-entry>
        <env-entry-name>SECRET_KEY</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>VssPRF4Csh1ru0wmJEsqxJU6pTHP+RgAqJ2624FSLCwQW+HVuGpUqEFgHSDtJ+axcHUNRFLU5n1fDhz+fpfYPBdV+Eos3htXEFo2tIglnUM=</env-entry-value>
